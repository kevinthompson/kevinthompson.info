---
import { Image } from 'astro:assets'
import newsletterBg from '@images/newsletter-bg.png'
---
<div class="relative">
  <div class="absolute inset-x-0 bottom-0 h-1/2 bg-slate-900" />
  <div class="relative mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="relative overflow-hidden rounded-2xl bg-amber-700 px-5 py-12 sm:px-16 lg:py-14">
      <Image
        src={newsletterBg}
        alt=""
        class="absolute inset-0 h-full w-full object-cover object-right"
      />
      <div class="relative flex w-full flex-col items-center lg:flex-row">
        <div class="max-w-2xl text-center lg:pr-4 lg:text-left">
          <h3 class="font-display text-4xl font-semibold text-white sm:text-5xl">
            Subscribe to my newsletter
          </h3>
          <p class="mx-auto mt-4 max-w-lg text-lg text-amber-50 lg:mx-0 lg:mt-6">
            Join 10,000+ designers and get creative site breakdowns,
            design musings and tips every Monday.
          </p>
        </div>
        <form
          action="#"
          method="post"
          class="relative mt-10 w-full max-w-lg lg:mt-0"
        >
          <input
            type="email"
            class="h-14 w-full rounded-full border-0 bg-white/10 py-3.5 pl-5 pr-32 text-sm leading-5 text-amber-50 placeholder-amber-100/90 outline-none ring-1 ring-white/25 backdrop-blur  duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-white/30 sm:pl-6"
            required
            placeholder="Enter your email"
            auto-complete="email"
          />
          <button
            type="submit"
            class="absolute right-1.5 top-1.5 inline-flex h-11 items-center rounded-full bg-amber-900 px-5 py-3 text-sm font-semibold text-amber-50 outline-none transition duration-200 ease-in-out hover:bg-amber-800 focus:outline-none sm:px-7 sm:text-md"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
